<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>cmcc-hlj-saml-server</baseDirectory>
  <fileSets>
    <!-- Pack Tomcat -->
    <fileSet>
      <directory>src/main/resources/apache-tomcat-${tomcat.version}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/apache-tomcat-${tomcat.version}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>bin/*.sh</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
    <!-- Pack ANT -->
    <fileSet>
      <directory>src/main/resources/apache-ant-${ant.version}</directory>
      <outputDirectory>/ant</outputDirectory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/apache-ant-${ant.version}</directory>
      <outputDirectory>/ant</outputDirectory>
      <includes>
        <include>bin/*</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
    <!-- Pack Runtime -->
    <fileSet>
      <directory>src/main/resources/runtime</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/runtime</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>bin/*.sh</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
  </fileSets>
  <dependencySets>
    <!-- Unpack WAR -->
    <dependencySet>
      <outputDirectory>/webapps/samlsvc</outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>*saml-web:war</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/webapps/samlsvc/WEB-INF/classes</outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>*saml-client:jar</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/webapps/samlsvc/WEB-INF/classes</outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>*saml-server:jar</include>
      </includes>
    </dependencySet>

    <!-- Unpack WAR -->
    <dependencySet>
      <outputDirectory>/webapps/testapp</outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>*saml-testapp:war</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/webapps/testapp/WEB-INF/classes</outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>*saml-client:jar</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
