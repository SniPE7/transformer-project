<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

  <!-- Client for Test Web Module -->
  <bean id="connectorManager4Test" class="com.ibm.tivoli.cmcc.connector.NetworkConnectorManager">
    <property name="serverName" value="${remote.saml.server.hostname}"></property>
    <property name="serverPort" value="${remote.saml.server.port}"></property>
    <!-- 60 seconds -->
    <property name="timeOut" value="60"></property>
    <!-- SSl/TLS parameters -->
    <property name="protocol" value="${remote.saml.server.protocol}"></property>
    <property name="trustCertsStorePath"     value="${saml.client.ssl.trust.store.path}"></property>
    <property name="trustCertsStorePassword" value="${saml.client.ssl.trust.store.password}"></property>
    <property name="keyStorePath"            value="${saml.client.ssl.key.store.path}"></property>
    <property name="keyStorePassword"        value="${saml.client.ssl.key.store.password}"></property>
    <property name="keyStoreKeyPassword"     value="${saml.client.ssl.key.password}"></property>
    <property name="connectorClassName"      value="com.ibm.tivoli.cmcc.connector.SimpleNetworkConnectorImpl"></property>
  </bean>

  <bean id="logoutClient4Test" class="com.ibm.tivoli.cmcc.client.LogoutServiceClientImpl" scope="prototype">
    <property name="charset" value="${message.saml.charset}"></property>
    <property name="connectorManager" ref="connectorManager4Test"></property>
    <property name="properties" ref="configProperties"></property>
  </bean>
  <bean id="activiateClient4Test" class="com.ibm.tivoli.cmcc.client.ActiviateServiceClientImpl" scope="prototype">
    <property name="charset" value="${message.saml.charset}"></property>
    <property name="connectorManager" ref="connectorManager4Test"></property>
    <property name="properties" ref="configProperties"></property>
  </bean>
  <bean id="queryAttributeClient4Test" class="com.ibm.tivoli.cmcc.client.QueryAttributeServiceClientImpl" scope="prototype">
    <property name="charset" value="${message.saml.charset}"></property>
    <property name="connectorManager" ref="connectorManager4Test"></property>
    <property name="properties" ref="configProperties"></property>
  </bean>
  <bean id="artifactResolvServiceClient4Test" class="com.ibm.tivoli.cmcc.client.ArtifactResolvServiceClientImpl" scope="prototype">
    <property name="charset" value="${message.saml.charset}"></property>
    <property name="connectorManager" ref="connectorManager4Test"></property>
    <property name="properties" ref="configProperties"></property>
  </bean>
  <bean id="passwordResetClient4Test" class="com.ibm.tivoli.cmcc.client.PasswordResetServiceClientImpl" scope="prototype">
    <property name="charset" value="${message.saml.charset}"></property>
    <property name="connectorManager" ref="connectorManager4Test"></property>
    <property name="properties" ref="configProperties"></property>
  </bean>

</beans>

