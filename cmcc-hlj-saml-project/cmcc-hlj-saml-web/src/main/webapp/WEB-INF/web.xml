<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

  <display-name>CMCC HLJ SAML Server Web Console</display-name>

  <!-- Spring Parameters -->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
       classpath*:com/ibm/tivoli/cmcc/server/spring/mainBean.xml,
       classpath*:com/ibm/tivoli/cmcc/web/mainBean.xml,
    </param-value>
  </context-param>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:log4j.xml</param-value>
  </context-param>
  <context-param>
    <param-name>log4jRefreshInterval</param-name>
    <!-- Log4J's watchdog thread, 10 seconds between config file refresh checks -->
    <param-value>1000</param-value>
  </context-param>

  <!-- Listeners -->
  <!-- Log4J Listener -->
  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
  
  <!-- Spring Listener -->
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <servlet>
    <description>Home</description>
    <display-name>Home</display-name>
    <servlet-name>com.ibm.tivoli.cmcc.web.HomeServlet</servlet-name>
    <servlet-class>com.ibm.tivoli.cmcc.web.HomeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>com.ibm.tivoli.cmcc.web.HomeServlet</servlet-name>
    <url-pattern>/service/home</url-pattern>
  </servlet-mapping>

  <servlet>
    <description>Global Logout</description>
    <display-name>Global Logout</display-name>
    <servlet-name>com.ibm.tivoli.cmcc.web.LogoutServlet</servlet-name>
    <servlet-class>com.ibm.tivoli.cmcc.web.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>com.ibm.tivoli.cmcc.web.LogoutServlet</servlet-name>
    <url-pattern>/service/logout</url-pattern>
  </servlet-mapping>

  <servlet>
    <description>ActiviateServlet</description>
    <display-name>ActiviateServlet</display-name>
    <servlet-name>com.ibm.tivoli.cmcc.web.ActiviateServlet</servlet-name>
    <servlet-class>com.ibm.tivoli.cmcc.web.ActiviateServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>com.ibm.tivoli.cmcc.web.ActiviateServlet</servlet-name>
    <url-pattern>/service/activiate</url-pattern>
  </servlet-mapping>

  <servlet>
    <description>QueryAttributeServlet</description>
    <display-name>QueryAttributeServlet</display-name>
    <servlet-name>com.ibm.tivoli.cmcc.web.QueryAttributeServlet</servlet-name>
    <servlet-class>com.ibm.tivoli.cmcc.web.QueryAttributeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>com.ibm.tivoli.cmcc.web.QueryAttributeServlet</servlet-name>
    <url-pattern>/service/query</url-pattern>
  </servlet-mapping>

  <servlet>
    <description>CreateSamlIDServlet</description>
    <display-name>CreateSamlIDServlet</display-name>
    <servlet-name>com.ibm.tivoli.cmcc.web.CreateSamlIDServlet</servlet-name>
    <servlet-class>com.ibm.tivoli.cmcc.web.CreateSamlIDServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>com.ibm.tivoli.cmcc.web.CreateSamlIDServlet</servlet-name>
    <url-pattern>/service/create</url-pattern>
  </servlet-mapping>

  <servlet>
    <description>PasswordResetServlet</description>
    <display-name>PasswordResetServlet</display-name>
    <servlet-name>com.ibm.tivoli.cmcc.web.PasswordResetServlet</servlet-name>
    <servlet-class>com.ibm.tivoli.cmcc.web.PasswordResetServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>com.ibm.tivoli.cmcc.web.PasswordResetServlet</servlet-name>
    <url-pattern>/service/pwdreset</url-pattern>
  </servlet-mapping>

  <servlet>
    <description>AuthenServlet</description>
    <display-name>AuthenServlet</display-name>
    <servlet-name>com.ibm.tivoli.cmcc.web.AuthenServlet</servlet-name>
    <servlet-class>com.ibm.tivoli.cmcc.web.AuthenServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>com.ibm.tivoli.cmcc.web.AuthenServlet</servlet-name>
    <url-pattern>/service/authen</url-pattern>
  </servlet-mapping>

  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/error.jsp</location>
  </error-page>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
