		<servlet-class>
		com.ibm.itim.webclient.formviewer.usermapping.UMDServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		ResourceServlet</display-name>
		<servlet-name>ResourceServlet</servlet-name>
		<servlet-class>
		com.ibm.itim.ui.logic.servlet.ResourceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>racfconnectgroupservlet</servlet-name>
		<url-pattern>/subforms/racfconnectgroupservlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PT84EmailAddServlet</servlet-name>
		<url-pattern>/subforms/PT84EmailAddServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchFilterServlet</servlet-name>
		<url-pattern>/subforms/searchfilter</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>SAPRoleServlet</servlet-name>
		<url-pattern>/subforms/saproleservlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UMDServlet</servlet-name>
		<url-pattern>/subforms/umdservlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ResourceServlet</servlet-name>
		<url-pattern>/resource</url-pattern>
	</servlet-mapping>
