        <ref bean="idp.jaas.loginModule.LdapUserPassAuth" />
        <ref bean="idp.jaas.loginModule.ADUserPassAuth" />
      </list>
    </constructor-arg>
  </bean>


  <bean id="loginContextManager"
    class="com.sinopec.siam.am.idp.authn.SpringBasedLoginContextManager">
